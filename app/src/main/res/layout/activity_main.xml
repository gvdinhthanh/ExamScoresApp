<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagesViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="4"
        android:src="@drawable/logo"
        android:contentDescription="Logo" />

    <Button
        android:id="@+id/bt_thinghe"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:background="@drawable/button_select"
        android:drawableStart="@drawable/tradiemthinghe11"
        android:fontFamily="@font/cambriab"
        android:text="Kết quả thi nghề"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <Button
        android:id="@+id/bt_thithu12"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/button_select"
        android:text="Kết quả thi thử THPT 12"
        android:textSize="20sp"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:fontFamily="@font/cambriab"
        android:textColor="@color/white"
        android:drawableStart="@drawable/tradiemthithu12"
        />
    <Button
        android:id="@+id/bt_thithpt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/button_select"
        android:text="Kết quả thi THPT Chính thức"
        android:textSize="20sp"
        android:layout_weight="2"
        android:fontFamily="@font/cambriab"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/tradiemthi12"
        />

    <Button
        android:id="@+id/bt_tinhBinhQuanDiemThi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/button_select"
        android:text="TÍNH BÌNH QUÂN ĐIỂM THI THPT"
        android:textSize="20sp"
        android:layout_weight="2"
        android:fontFamily="@font/cambriab"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/tinhbinhquandiemthi"
        />

</LinearLayout>